<%- include('includes/header') %>
<link rel="stylesheet" type="text/css" href="/css/login.css" />
<body>
  <form
    class="login_container"
    action="/resto/sign-up"
    method="POST"
    enctype=""
  >
    <div class="login_frame" style="width: 650px">
      <div class="login_top">
        <span> Ro'yhatdan o'tish </span>
        <div>
          Bosh sahifaga qaytish <a href="/resto" style="color: #644efb">Home</a>
        </div>
        <p>
          Ro'yhatdan allaqachon o'tmganmisiz?
          <a href="/resto/login" style="color: #644efb">Login</a>
        </p>
      </div>

      <div class="sign_input_frame">
        <div class="sign_up_frame">
          <label for="">Foydalanuvchining ismi</label>
          <input
            type="text"
            name="mb_nick"
            placeholder="Foydalanuvchining ismi"
            value=""
            required
          />
        </div>
        <!-- ---------------- -->
        <div class="sign_up_frame">
          <label for="">Telefon raqam</label>
          <input
            type="text"
            name="mb_phone"
            placeholder="Telefon raqam"
            value=""
            required
          />
        </div>
      </div>
      <!-- ------------- -->

      <div class="sign_input_frame">
        <div class="sign_up_frame">
          <label for="">Password</label>
          <input
            type="password"
            name="mb_password"
            placeholder="Passwordni kiriting"
            value=""
            required
          />
        </div>
        <!-- ---------------- -->
        <div class="sign_up_frame">
          <label for="">Passwordni tasdiqlash</label>
          <input
            type="password"
            name="mb_confirm_password"
            placeholder="Passwordni tasdiqlash"
            value=""
            required
          />
        </div>
      </div>
      <!-- ------------- -->
      <div class="login_input_frame">
        <div class="media-frame">
          <img class="upload_img_frame" src="/images/default_resto.jpg" />
          <div class="upload_container">
            <span class="media_text">Taom Rasmi</span>
            <div class="filebox bs3-primary preview-image">
              <input
                class="upload_name"
                value="Rasmi tanlang"
                disabled="disabled"
              />
              <label>Rasmni yuklash</label>
              <input
                type="file"
                id="input_file"
                name="restaurant_img"
                placeholder="Passwordni tasdiqlash"
                class="upload_hidden form-control_file restaurant_img"
              />
            </div>
            <p class="thumbnail_desc">
              Oshxona rasmingizni bu yerga yuklang. <br />Muhim ko'rsatmalar:
              .jpg, .jpeg, yoki .png. <br />rasmda matn yo'q bo'lishi darkor!
            </p>
          </div>
        </div>
      </div>

      <button class="login_btn btn" name="signup" type="submit">
        Ro'yhatdan o'tish
      </button>
    </div>
  </form>
</body>
<%- include('includes/footer') %>
